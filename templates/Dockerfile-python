# Use an official Python runtime as a parent image
FROM python:3.11-slim

# Add color support to the terminal
ENV TERM=xterm-256color

# Install common development tools
RUN apt-get update && apt-get install -y \
    git \
    vim \
    curl \
    wget \
    jq \
    tree \
    htop \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user for development
RUN useradd -m -s /bin/bash pythondev && \
    usermod -aG sudo pythondev && \
    echo 'pythondev ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Set the working directory
WORKDIR /app

# Change ownership of the workspace to the pythondev user
RUN chown -R pythondev:pythondev /app

# Switch to the pythondev user
USER pythondev

# Install requirements if they exist
RUN if [ -f requirements.txt ]; then pip install --no-cache-dir -r requirements.txt; fi

# Set the default command to an interactive bash shell
CMD [ "bash" ]
