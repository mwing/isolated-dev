# Use the official Go image as the base
FROM golang:1.21

# Add color support to the terminal
ENV TERM=xterm-256color

# Install common development tools
RUN apt-get update && apt-get install -y \
    git \
    vim \
    curl \
    wget \
    jq \
    tree \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Set up Go environment variables
ENV GO111MODULE=on
ENV GOPROXY=https://proxy.golang.org,direct

# Create a non-root user for development
RUN useradd -m -s /bin/bash gopher && \
    usermod -aG sudo gopher && \
    echo 'gopher ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Set the working directory
WORKDIR /app

# Change ownership of the workspace to the gopher user
RUN chown -R gopher:gopher /app

# Switch to the gopher user
USER gopher

# Install useful Go tools
RUN go install golang.org/x/tools/gopls@latest && \
    go install github.com/go-delve/delve/cmd/dlv@latest && \
    go install golang.org/x/tools/cmd/goimports@latest

# Set the default command to an interactive bash shell
CMD [ "bash" ]