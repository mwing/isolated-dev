    fmt.Println("Hello from Go!")
    fmt.Println("Edit this file to start building your application.")
}
EOF
            
            # Create .gitignore
            cat > .gitignore << 'EOF'
# Go
*.exe
*.exe~
*.dll
*.so
*.dylib
*.test
*.out
go.work

# Vendor
