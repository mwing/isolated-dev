# IDE
.vscode/
.idea/
*.swp
*.swo
*~

# OS
.DS_Store
Thumbs.db
EOF
            
            echo "   -> Created: go.mod, main.go, .gitignore"
            ;;
            
        rust)
            echo "   -> Creating Rust project structure..."
            
            # Get project name from current directory
            local project_name=$(basename "$(pwd)")
            
            # Create Cargo.toml
            cat > Cargo.toml << EOF
[package]
name = "$project_name"
version = "0.1.0"
