*~

# OS
.DS_Store
Thumbs.db
EOF
            
            echo "   -> Created: package.json, index.js, .gitignore"
            ;;
            
        golang)
            echo "   -> Creating Go project structure..."
            
            # Get project name from current directory
            local project_name=$(basename "$(pwd)")
            
            # Create go.mod
            cat > go.mod << EOF
module $project_name

go 1.22

require ()
EOF
            
            # Create main.go
            cat > main.go << 'EOF'
package main

import "fmt"

