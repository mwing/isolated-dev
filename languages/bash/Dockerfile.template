FROM ubuntu:{{VERSION}}

# Install system dependencies and shell tools
RUN apt-get update && apt-get install -y \
    bash \
    bash-completion \
    git \
    vim \
    curl \
    wget \
    jq \
    tree \
    htop \
    shellcheck \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Keep container running
CMD ["bash"]